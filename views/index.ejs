<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="css/index.css" />
    <script defer src="js/index.serviceModel.js"></script>
    <script defer src="js/index.js"></script>
    <title>My Notes | Home</title>
  </head>
  <body>
    <header>
      <div class="flex">
        <a href="/"><span>Notes</span></a>
        <span>|</span>
        <a href="/files"><span>Files</span></a>
      </div>
      <ul class="menu-list">
        <li>+</li>
        <li><a href="/newnote">Notes</a></li>
        <span>|</span>
        <li><a href="/newfile">Files</a></li>
      </ul>
    </header>
    <div class="logo-container">
      <img class="imgmain" src="/images/main.webp" />
    </div>
    <div class="container">
      <table border="1">
        <thead>
          <tr>
            <th>S.No</th>
            <th>Title</th>
            <th class="actions">RM</th>
          </tr>
        </thead>
        <tbody>
          <% posts.forEach((post, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><a href="/post?id=<%= post.id %>"><%= post.title %></a></td>
            <td class="actions">
              <img
                class="deleteImg"
                src="svg/delete.svg"
                data-id="<%= post.id %>"
                data-title="<%= post.title %>"
              />
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
      <div class="pagination">
        <% if (currentPage > 1) { %>
        <a href="?page=<%= currentPage - 1 %>" class="pagination-link"
          >Previous</a
        >
        <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
        <a
          href="?page=<%= i %>"
          class="pagination-link <%= i === currentPage ? 'active' : '' %>"
          ><%= i %></a
        >
        <% } %> <% if (currentPage < totalPages) { %>
        <a href="?page=<%= currentPage + 1 %>" class="pagination-link">Next</a>
        <% } %>
      </div>
    </div>
  </body>
</html>
